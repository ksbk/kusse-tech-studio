# EditorConfig helps maintain consistent coding styles across different editors
# See https://editorconfig.org for more information

root = true

# Default settings for all files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

# Python files
[*.py]
indent_size = 4
max_line_length = 88

# JavaScript/TypeScript files
[*.{js,ts,jsx,tsx}]
indent_size = 2

# CSS/SCSS files
[*.{css,scss,sass}]
indent_size = 2

# HTML/Jinja2 templates
[*.{html,j2,jinja2}]
indent_size = 2

# YAML files
[*.{yml,yaml}]
indent_size = 2

# JSON files
[*.json]
indent_size = 2

# Markdown files
[*.md]
trim_trailing_whitespace = false
indent_size = 2

# Docker files
[{Dockerfile,*.dockerfile}]
indent_size = 4

# Shell scripts
[*.{sh,bash}]
indent_size = 2

# Configuration files
[*.{ini,cfg,conf}]
indent_size = 4

# Makefile (must use tabs)
[{Makefile,*.mk}]
indent_style = tab
indent_size = 4

# Package files
[{package.json,*.lock}]
indent_size = 2
