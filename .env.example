# KusseTechStudio Environment Configuration Template
# Copy this file to `.env` for local development
# For production, use environment-specific files in envs/

# Flask Configuration
FLASK_ENV=development
FLASK_APP=run.py
FLASK_DEBUG=True
SECRET_KEY=dev-secret-key-change-in-production

# Application Settings
CONTACT_EMAIL=contact@kussetechstudio.com
GOOGLE_ANALYTICS_ID=

# Database Configuration
DATABASE_URL=sqlite:///dev.db

# Email Configuration (Development - using MailHog)
MAIL_SERVER=localhost
MAIL_PORT=1025
MAIL_USE_TLS=False
MAIL_USE_SSL=False
MAIL_USERNAME=
MAIL_PASSWORD=

# Security Settings
WTF_CSRF_ENABLED=False

# Development-specific settings
HOT_RELOAD=True

# Optional: Docker Development
COMPOSE_PROJECT_NAME=kusse-tech-studio
