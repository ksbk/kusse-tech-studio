{
  "extends": [
    "stylelint-config-standard"
  ],
  "rules": {
    "at-rule-no-unknown": [
      true,
      {
        "ignoreAtRules": [
          "tailwind",
          "apply",
          "variants",
          "responsive", 
          "screen",
          "use",
          "mixin",
          "include",
          "extend"
        ]
      }
    ]
  },
  "ignoreFiles": [
    "node_modules/**/*",
    "app/static/dist/**/*"
  ]
}
