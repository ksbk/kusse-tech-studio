{
  "name": "kusse-tech-studio",
  "version": "2.0.0",
  "description": "Professional portfolio website for KusseTechStudio",
  "main": "app/static/src/scripts/app/main.js",
  "type": "module",
  "scripts": {
    "build": "vite build",
    "dev": "vite build --watch",
    "preview": "vite preview",
    "test": "echo \"Error: no test specified\" && exit 1",
    "lint:js": "eslint app/static/src/scripts/**/*.js",
    "lint:css": "stylelint app/static/src/styles/**/*.scss",
    "format": "prettier --write app/static/src/**/*.{js,scss}",
    "clean": "rm -rf app/static/dist",
    "start": "npm run build && flask run",
    "dev:vite": "vite",
    "analyze": "vite-bundle-analyzer"
  },
  "keywords": [
    "portfolio",
    "flask",
    "python",
    "web-development",
    "data-automation"
  ],
  "author": "KusseTechStudio",
  "license": "MIT",
  "devDependencies": {
    "@tailwindcss/forms": "^0.5.10",
    "@tailwindcss/typography": "^0.5.16",
    "@vitejs/plugin-legacy": "^7.1.0",
    "eslint": "^8.42.0",
    "postcss-scss": "^4.0.9",
    "prettier": "^2.8.0",
    "sass": "^1.63.0",
    "stylelint": "^15.7.0",
    "stylelint-config-standard": "^39.0.0",
    "stylelint-config-standard-scss": "^15.0.1",
    "terser": "^5.43.1",
    "vite": "^7.0.6",
    "vite-plugin-eslint": "^1.8.1"
  },
  "stylelint": {
    "extends": [
      "stylelint-config-standard-scss"
    ],
    "customSyntax": "postcss-scss",
    "rules": {
      "scss/at-rule-no-unknown": null,
      "at-rule-no-unknown": [
        true,
        {
          "ignoreAtRules": [
            "tailwind",
            "apply",
            "variants",
            "responsive",
            "screen",
            "use",
            "mixin",
            "include",
            "extend"
          ]
        }
      ]
    },
    "ignoreFiles": [
      "node_modules/**/*",
      "app/static/dist/**/*"
    ]
  }
}
