# Development Environment Configuration
FLASK_ENV=development
FLASK_DEBUG=True
FLASK_APP=run.py
SECRET_KEY=dev-secret-key-change-in-production

# Database
DATABASE_URL=sqlite:///dev.db

# Email (Development - using MailHog)
MAIL_SERVER=localhost
MAIL_PORT=1025
MAIL_USE_TLS=False
MAIL_USE_SSL=False
MAIL_USERNAME=
MAIL_PASSWORD=

# Analytics
GOOGLE_ANALYTICS_ID=
ANALYTICS_ENABLED=True
ANALYTICS_LOG_LEVEL=DEBUG
POSTHOG_API_KEY=phc-dev-key-placeholder
POSTHOG_HOST=https://app.posthog.com

# Error Tracking (Sentry) - Disabled in development
SENTRY_DSN=
SENTRY_TRACES_SAMPLE_RATE=0.0
SENTRY_PROFILES_SAMPLE_RATE=0.0
APP_VERSION=2.0.0-dev

# Contact
CONTACT_EMAIL=contact@kussetechstudio.com
CONTACT_EMAIL_ENABLED=False

# Security
WTF_CSRF_ENABLED=False
JWT_SECRET_KEY=dev-jwt-secret-change-in-production

# Performance
CACHE_TYPE=simple
CACHE_DEFAULT_TIMEOUT=300

# Development Tools
HOT_RELOAD=True
SASS_WATCH=True
JS_MINIFY=False
CSS_MINIFY=False

# Docker Development
COMPOSE_PROJECT_NAME=kusse-tech-studio
